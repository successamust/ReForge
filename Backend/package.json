{
  "name": "30-day-coding-challenge-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for a 30-day progressive coding challenge platform",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "NODE_ENV=development node --watch src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "seed": "node src/seed/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write 'src/**/*.js' 'tests/**/*.js'",
    "build": "echo 'No build step required for Node.js'",
    "scheduler": "node src/workers/scheduler.runner.js",
    "worker": "node src/workers/grading.worker.js"
  },
  "keywords": [
    "coding-challenge",
    "education",
    "programming",
    "learning-platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^10.32.1",
    "@sentry/profiling-node": "^10.32.1",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.1.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pdfkit": "^0.14.0",
    "rate-limit-redis": "^4.3.1",
    "stripe": "^20.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.4",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
